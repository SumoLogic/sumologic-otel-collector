ifeq ($(OS),Windows_NT)
	OS=windows
endif

GOTEST=go test -race
LINT=golangci-lint

.PHONY: test
test:
	$(GOTEST) ./...

.PHONY: fmt
fmt:
	gofmt  -w -s ./
	goimports -w  -local github.com/open-telemetry/opentelemetry-collector-contrib ./

.PHONY: lint
lint:
	$(LINT) run

.PHONY: mod-download-all
mod-download-all:
	go mod download all && go mod tidy -compat=1.19
